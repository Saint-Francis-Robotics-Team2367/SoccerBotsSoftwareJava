{
  "name": "soccerbots-control-app",
  "version": "1.0.0",
  "description": "SoccerBots Robot Control Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run vite\" \"npm run electron:wait\"",
    "vite": "cd ../frontend && npm run dev",
    "electron:wait": "wait-on http://localhost:5173 && electron .",
    "electron": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.soccerbots.control",
    "productName": "SoccerBots Control",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "../frontend/dist/**/*",
      "../target/robotics-control-system-1.0.0-jar-with-dependencies.jar"
    ],
    "extraResources": [
      {
        "from": "../target/robotics-control-system-1.0.0-jar-with-dependencies.jar",
        "to": "backend.jar"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^9.0.1"
  }
}
